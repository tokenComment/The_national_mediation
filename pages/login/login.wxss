/* pages/login/login.wxss */
page{
  height: 100%;
}
.frame{
  display: flex;
  width: 100%;
  height: 100%;
  /* 子项目纵向排列 */
  flex-direction: column; 
  background-color: rgb(219, 221, 126);
}
.head{
width: 100%;
height: 40%;
background:linear-gradient(left,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
background:-moz-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
/* background:-webkit-gradient(linear,left bottom,right top,from(#000),color-stop(.5,#f00),to(#090)); */
background:-webkit-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
background:-o-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
background:-ms-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
background:linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
display: flex;
align-items: center;
justify-content: center;

}
.base {
  width: 100%;
  height: 60%;
  background:linear-gradient(left,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  background:-moz-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  /* background:-webkit-gradient(linear,left bottom,right top,from(#000),color-stop(.5,#f00),to(#090)); */
  background:-webkit-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  background:-o-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  background:-ms-linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  background:linear-gradient(90deg,rgb(9, 163, 224),rgb(255,255,255),rgb(34, 177, 76));
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.logo{
  height: 150rpx;
  width: 150rpx;
  
  border: solid 1rpx;
  border-image: -webkit-linear-gradient(#00569D , white , #00569D)1 10 1; /* 控制边框颜色渐变 */
  border-image: -moz-linear-gradient(#00569D , white , #00569D)1 10 1;
  border-image: linear-gradient(#00569D , white , #00569D)1 10 1; /* 标准的必须写在最后 */
  display: flex;
  border-radius: 150rpx;
  justify-content: center;
  align-items: center;
  
}
.logo image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
}
.login{
  height: 65rpx;
  width: 300rpx;
  background-color: rgb(4, 113, 238);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  align-items: center;
}
.phone{
  height: 65rpx;
  width: 300rpx;
  background-color: rgb(3, 59, 163);
  border-radius: 20rpx;
  margin-left:10rpx ;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  align-items: center;
}
.check{
 
}
.loginbtn{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}
.check .wx-checkbox-input{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: relative;
  margin-left: 15rpx;
  margin-bottom: 10rpx;
  font-size:1rpx !important;
  border-color: rgb(173, 39, 39);
}
.agreement{
  display: flex;
  width: 100%;
  margin-top:40rpx ;
  justify-content: center;

}
.agreement_text{
  font-size:33rpx;
  font-family: serif;
  
}